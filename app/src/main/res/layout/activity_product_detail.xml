<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_detail_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5F6"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <android.widget.Button
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_icon_2"/>


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="Button test"
            android:background="@drawable/button_style"/>

        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:background="@drawable/action"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/bogoc">

        <ImageView
            android:id="@+id/img_item_menu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/capuccino" />

        <TextView
            android:id="@+id/menu_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Name"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/menu_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Price"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menu_item_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Description" />
    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:orientation="vertical"
        android:layout_alignBottom="@+id/layout_detail_product">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bogoc"
            android:text="Add to cart"/>

    </RelativeLayout>

</LinearLayout>