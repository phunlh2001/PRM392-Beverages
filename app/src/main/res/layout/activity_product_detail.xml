<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_detail_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5F6"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:weightSum="10"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

        <android.widget.Button
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_icon_2"/>


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="Button test"
            android:background="@drawable/button_style"/>

        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:background="@drawable/action"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4.8"
        android:background="@drawable/bogoc">

        <ImageView
            android:id="@+id/img_item_menu"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:src="@drawable/capuccino" />

        <TextView
            android:id="@+id/menu_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Name"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/img_item_menu"/>

        <TextView
            android:id="@+id/menu_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Price"
            android:textStyle="bold"
            android:layout_below="@+id/menu_item_title"/>

        <TextView
            android:id="@+id/menu_item_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Description"
            android:layout_below="@+id/menu_item_price"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bogoc"
        android:orientation="vertical">



        <RadioGroup
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/radio_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/size_small"
                android:text=" Small"/>


            <RadioButton
                android:id="@+id/radio_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableLeft="@drawable/size_large"
                android:text=" Large" />
        </RadioGroup>


        <RadioGroup
            android:id="@+id/topping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/size">

            <TextView
                android:id="@+id/tv_topping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topping"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/radio_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/topping"
                android:text=" Espresso (1 shot)"/>
        </RadioGroup>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_border_grey">


        <EditText
            android:id="@+id/edtNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:hint="  Your note to barista"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:orientation="vertical"
        android:layout_alignBottom="@+id/layout_detail_product">

        <Button
            android:id="@+id/minus_icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/minus_icon"
            android:layout_toLeftOf="@id/tv_quantity"/>
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/bogoc_stroke"
            android:layout_centerHorizontal="true"

            android:text=""/>
        <Button
            android:id="@+id/plus_icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_icon"
            android:layout_toEndOf="@+id/tv_quantity" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_quantity"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bogoc"
            android:text="Add to cart"/>

    </RelativeLayout>

</LinearLayout>