<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delivery_NoOrder_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/img_coffee_no_order"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/img_coffee_no_order">
        </ImageView>

        <TextView android:ellipsize="end"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="You have no order"
            android:textStyle="bold"
            />
        <TextView
            android:textSize="16dp"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="How about trying our new drinks?"
           />

        <android.widget.Button
            android:id="@+id/btn_order_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16sp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_button_order"
            android:text="Order now!"
            android:textAllCaps="false"
            android:textColor="#ffffff">

        </android.widget.Button>
    </LinearLayout>

</FrameLayout>